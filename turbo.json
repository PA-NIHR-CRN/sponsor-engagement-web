{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**/*", ".next/**", "!.next/cache/**"],
      "env": ["NEXTAUTH_URL", "AUTH_CLIENT_ID", "AUTH_CLIENT_SECRET", "AUTH_WELL_KNOWN_URL"]
    },
    "start": {},
    "lint": {
      "dependsOn": ["^db:generate"]
    },
    "lint:fix": {
      "dependsOn": ["^db:generate"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["^db:generate"],
      "dotEnv": [".env.local"],
      "env": ["NEXTAUTH_URL", "AUTH_CLIENT_ID", "AUTH_CLIENT_SECRET", "AUTH_WELL_KNOWN_URL"]
    },
    "test:ci": {
      "dependsOn": ["^db:generate"]
    },
    "typecheck": {},
    "dev": {
      "cache": false,
      "dependsOn": ["^db:generate"],
      "persistent": true,
      "env": ["NEXTAUTH_URL", "AUTH_CLIENT_ID", "AUTH_CLIENT_SECRET", "AUTH_WELL_KNOWN_URL"]
    },
    "db:generate": {},
    "db:push": {}
  }
}

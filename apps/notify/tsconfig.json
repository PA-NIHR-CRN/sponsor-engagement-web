{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "downlevelIteration": true,
    "isolatedModules": false,
    "allowJs": true
  },
  "exclude": ["dist", "build", "node_modules", "**/*.spec.ts", "src/mocks/**/*"],
  "include": ["src/**/*.ts"]
}

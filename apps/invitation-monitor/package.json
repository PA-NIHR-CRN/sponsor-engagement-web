{
  "name": "invitation-monitor",
  "version": "0.0.0",
  "private": true,
  "description": "Montiors the status of invitation emails",
  "scripts": {
    "build": "tsup",
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node -r esbuild-register ./src/index.ts",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.779.0",
    "@nihr-ui/email": "*",
    "@nihr-ui/logger": "*",
    "@nihr-ui/templates": "*",
    "database": "*",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^15.12.2",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.3.1",
    "ts-mockery": "^1.2.0",
    "tsconfig": "*",
    "tsup": "^8.0.1",
    "typescript": "^4.5.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "noExternal": [
      "@nihr-ui/logger",
      "@nihr-ui/email",
      "@nihr-ui/templates"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
